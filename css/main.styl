ffh = "Microsoft YaHei", Arial, Helvetica, sans-serif, "宋体";
bgcl = #212121
ceee = #eee
cbddc5d = #bddc5d
cd6ec93 = #d6ec93
.main-left
  width: 220px
  background: bgcl
  padding-top 20px
  position: fixed
  top: 0
  bottom: 0
  left: 0
  button
    display none
    line-height 24px
    border 0
    background bgcl
    color ceee
  #CSS-notes
    display none
    width 24px
    height @width
    vertical-align: middle;
    margin-left 5px
    font-size 14px
  #CSS-notes + label
    background-color: #FFF;
    border: 1px solid #C1CACA;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05), inset 0px -15px 10px -12px rgba(0, 0, 0, 0.05);
    padding: 9px;
    border-radius: 5px;
    display: inline-block;
    position: relative;
    margin-right: 30px;
  #CSS-notes + label:active
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05), inset 0px 1px 3px rgba(0, 0, 0, 0.1);


  #CSS-notes:checked + label
    background-color: #ECF2F7;
    border: 1px solid #92A1AC;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05), inset 0px -15px 10px -12px rgba(0, 0, 0, 0.05), inset 15px 10px -12px rgba(255, 255, 255, 0.1);
    color: #243441;


  #CSS-notes:checked + label:after
    content: '\2714'; //勾选符号
    position: absolute;
    top: 0;
    left: 0;
    color: #758794;
    width: 100%;
    text-align: center;
    font-size: 1.4em;
    padding: 1px 0 0 0;
    vertical-align: text-top;
    height: 100%;
    line-height: 150%;


a
  color: #eee
  font-size: 18px;

ul
  padding: 20px 0 0 10px
  li
    line-height: 38px

ul ul
  padding: 0 0 0 10px
  li
    a
      font-size 14px
      line-height 24px

.main-right
  background: #F9F9F9
  padding: 10px;
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 221px
  #CSS, #JQuery, #JavaScript, #Grunt-plug-in-notes
    margin-bottom 20px
    h3
      font-size: 20px
      line-height: 38px
      color: bgcl
      background-color: ceee
